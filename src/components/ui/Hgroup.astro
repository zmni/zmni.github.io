---
type Props = {
  as?: "h1" | "h2" | "h3"
  label?: string
  deskripsi?: string
  class?: string
}

const { as: Tag = "h1", label, deskripsi, class: className = "mb-12" } = Astro.props as Props

const sizeHClass =
  Tag === "h3"
    ? "text-xl md:text-2xl xl:text-3xl"
    : Tag === "h2"
      ? "text-2xl md:text-3xl xl:text-4xl"
      : "text-3xl lg:text-4xl xl:text-5xl"
---

<hgroup class:list={["text-center", className]}>
  <Tag class:list={["font-black", "tracking-tighter", "text-gray-800", "uppercase", sizeHClass]}
    >{label}</Tag
  >
  {
    deskripsi && (
      <p
        class:list={[
          "mx-auto",
          "text-gray-600",
          "mt-2",
          Tag === "h1" ? "md:mt-4" : "",
          "md:max-w-xl",
          "lg:max-w-2xl",
        ]}
      >
        {deskripsi}
      </p>
    )
  }
</hgroup>
